@model RMDS.Models.DistributorRequest

@{
    ViewBag.Title = "EditRequest";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>EditRequest</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>DistributorRequest</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col-md-10">
            @Html.HiddenFor(model => model.RequestID, new { htmlAttributes = new { @class = "form-control" } })
          </div>
    </div>

    <div class="form-group">
           <div class="col-md-10">
            @Html.HiddenFor(model => model.NumberOfPeople, new { htmlAttributes = new { @class = "form-control" } })
           </div>
    </div>

    <div class="form-group">
           <div class="col-md-10">
            @Html.HiddenFor(model => model.RequestDate, new { htmlAttributes = new { @class = "form-control" } })
           
        </div>
    </div>

    <div class="col-md-10">

        @Html.DropDownListFor(model => model.RequestStatus, new SelectList(new string[] { "Pending", "Processed", "Cancel" }, Model.RequestStatus), new { @class = " form-control dropdown-toggle", style = " height:35px" })

        @Html.ValidationMessageFor(model => model.RequestStatus, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
      
        <div class="col-md-10">
            @Html.HiddenFor(model => model.UserID, new { htmlAttributes = new { @class = "form-control" } })
        
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "GetDistributionRequest" )
</div>
