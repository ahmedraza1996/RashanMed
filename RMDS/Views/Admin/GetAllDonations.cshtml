@model IEnumerable<RMDS.Models.UserDonation>

@{
    ViewBag.Title = "Pending Donations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




    <div class="container container-fluid">
        <h2>All Dontaions</h2>
        <div class="form-group">
            <button class="btn btn-dark" title="Donation Detials" onclick="location.href='@Url.Action("GetAllPendingDonation", "Admin")'">View pending donations</button>

        </div>

        <table class="table table-responsive table-striped  table-hover">
            <thead class="thead">
                <tr>

                    <th>
                        @Html.DisplayNameFor(model => model.RequestDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DonationStatus)
                    </th>


                    <th>
                        @Html.DisplayNameFor(model => model.UserFullName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DonationType)
                    </th>
                    <th></th>
                </tr>
            </thead>

            @foreach (var item in Model)
            {

                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.RequestDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DonationStatus)
                    </td>


                    <td>
                        @Html.DisplayFor(modelItem => item.UserFullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DonationType)
                    </td>
                    <td>
                        @Html.HiddenFor(modelItem => item.UserId)
                    </td>
                    <td>
                        @Html.HiddenFor(modelItem => item.DonationID)
                    </td>
                    <td>
                        <button class="btn btn-dark button" title="Donation Detials" onclick="location.href='@Url.Action("GetDonationDetails", "Admin", new { id = item.DonationID })'">Donation Details</button>
                        <button class="btn btn-light buttoncenter" title="Donation Detials" onclick="location.href='@Url.Action("GetUserDetail", "Admin", new { id = item.UserId })'">User Details</button>
                        @if (item.DonationStatus.Equals("Pending"))
                        {
                            <button class="btn btn-dark button" title="Donation Detials" onclick="location.href='@Url.Action("EditDonation", "Admin", new { id = item.DonationID })'"><p>Edit Status</p></button>

                        }
                        else
                        {
                            <button class="btn btn-disabled button" title="Donation Detials" href="#" @*onclick="location.href='@Url.Action("EditDonation", "Admin", new { id = item.DonationID })'"*@><p>Edit Status</p></button>
                        }

                    </td>
                </tr>

            }

        </table>
    </div>
