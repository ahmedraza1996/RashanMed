@model IEnumerable<RMDS.Models.DistributorRequest>

@{
    ViewBag.Title = "GetAllRequest";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container container-fluid">


    <h2>All Distributor Request</h2>


    <table class="table table-responsive table-striped  table-hover">
        <thead class="thead">
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.NumberOfPeople)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RequestDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RequestStatus)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserID)
                </th>
                <th></th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.NumberOfPeople)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RequestDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RequestStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserID)
                </td>
                <td>
                    @if (item.RequestStatus.Equals("Pending"))
                    {
                        <button class="btn btn-dark button" title="Edit Detials" onclick="location.href='@Url.Action("EditRequest", "Admin", new { id = item.RequestID })'"><p>Edit Status</p></button>

                    }
                    else
                    {
                        <button class="btn btn-disabled button" title="Edit Detials" href="#" @*onclick="location.href='@Url.Action("EditDonation", "Admin", new { id = item.DonationID })'"*@><p>Edit Status</p></button>
                    }
                    @*@Html.ActionLink("Donation Details", "GetDonationDetails", new { id = item.DonationID }) |
                        @Html.ActionLink("Donator Details", "GetUserDetail", new { id = item.UserId }) |
                        @Html.ActionLink("Edit Status", "EditDonation", new { id = item.DonationID })*@
                </td>
                <td>
                    @Html.HiddenFor(modelItem => item.RequestID)
                </td>
            </tr>
        }

    </table>
</div>